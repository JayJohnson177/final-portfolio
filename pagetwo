<script type="text/javascript">
        
    function calculate() 
    {
        var ex1 = document.getElementById('expression');
        ex1.value = eval(ex1.value)
    }

    function reset()
    {
        var ex1 = document.getElementById('expression');
        ex1.value = ""

    }
    function update(buttonValue)
    {
        var ex1 = document.getElementById('expression');
        ex1.value = ex1.value + buttonValue

    }

</script>


